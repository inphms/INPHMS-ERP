<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.ActionSidebar">
        <div t-ref="root" class="i_action_sidebar border-end flex-grow-0 flex-shrink-0 h-100 pb-5 overflow-auto position-relative pe-1 ps-3">
            <div class="p-4 ps-2 d-flex flex-column align-items-center">
                <img class="img i_action_sidebar_brand_image img-fluid" src="/web/static/img/logo2.png"></img>
                <span class="small text-muted fw-bolder mt-2">ERP System.</span>
            </div>
            <ul name="dashboard" class="list-group d-block px-2 px-md-0">
                <li class="list-group-item py-0 cursor-pointer border-0 pe-0"
                    t-att-class="isChildList ? env.isSmall ? '' : 'o_treeEntry' : 'ps-0'"
                >
                    <a href="/inphms" class="text-reset i_action_sidebar_item_header list-group-item list-group-item-action d-flex align-items-center px-0 py-lg-1 border-0"
                        t-att-class="{'active text-black fw-bold': isInHomeMenu}">
                        <div class="d-flex align-items-center overflow-hidden w-100 cursor-pointer mb-0"
                            data-tooltip="Dashboard">
                            <button class="i-toggle-fold btn p-0 px-1 flex-shrink-0 text-center">
                                
                            </button>
                            <div class="d-flex align-items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="17" height="13" fill="none"><path fill="currentColor" d="M3 7.11V2.22c0-.33.12-.62.36-.86S3.89 1 4.22 1H7.9v6.11H3ZM9.11 1h3.67c.33 0 .62.12.86.36s.36.53.36.86v2.45H9.11V1Zm0 11V5.89H14v4.89c0 .33-.12.62-.36.86s-.53.36-.86.36H9.1ZM3 8.33h4.89V12H4.22c-.33 0-.62-.12-.86-.36a1.18 1.18 0 0 1-.36-.86V8.33ZM4.22 5.9h2.45V2.22H4.22V5.9Zm6.11-2.45h2.45V2.22h-2.45v1.22Zm0 3.67v3.67h2.45V7.1h-2.45Zm-6.1 2.45v1.22h2.44V9.56H4.22Z"/></svg>
                                <span class="text-truncate">Dashboard</span>
                            </div>
                        </div>
                    </a>
                </li>
            </ul>
            <t t-foreach="currentAppSections" t-as="sideItem" t-key="sideItem_index">
                 <ul class="list-group d-block px-2 px-md-0">
                    <t t-call="web.ActionSidebar.Item">
                        <t t-set="sideItem" t-value="sideItem"></t>
                    </t>
                 </ul>
            </t>
        </div>
        <div class="h-100">
            <span class="i_sidebar_resize"  t-on-click.stop.prevent="" t-on-pointerdown.stop.prevent="_onStartResize"></span>
        </div>
    </t>

    <t t-name="web.ActionSidebar.Item">
        <li class="list-group-item py-0 cursor-pointer border-0 pe-0"
            t-att-class="isChildList ? env.isSmall ? '' : 'o_treeEntry' : 'ps-0'"
        >
            <header class="i_action_sidebar_item_header list-group-item list-group-item-action d-flex align-items-center px-0 py-lg-1 border-0"
                    t-att-class="{'active text-black fw-bold': sideItem.actionID and state.activeActionID === sideItem.actionID}"
                    t-on-click="() => this.toggleSidebarItem(sideItem)">
                <div class="d-flex align-items-center overflow-hidden w-100 cursor-pointer mb-0"
                     t-att-data-tooltip="sideItem.name">
                    <button class="i-toggle-fold btn p-0 px-1 flex-shrink-0 text-center">
                        <i t-if="sideItem.childrenTree.length"
                           class="fa"
                           t-att-class="{
                            'fa-caret-down': state.expanded[sideItem.id],
                            'fa-caret-right': !state.expanded[sideItem.id]
                           }"></i>
                    </button>
                    <div class="d-flex align-items-center gap-2">
                        <!-- <i t-if="sideItem.submenuIcon" class="fa-fw" t-att-class="value.submenuIcon"></i> -->
                        <t t-if="sideItem.submenuIcon" t-out="sideItem.submenuIcon"/>
                        <span class="text-truncate" t-esc="sideItem.name"></span>
                    </div>
                </div>
            </header>
            <ul t-if="sideItem.childrenTree.length and state.expanded[sideItem.id]"
                class="list-group d-block">
                <t t-foreach="sideItem.childrenTree" t-as="sideItemChild" t-key="sideItemChild_index">
                    <t t-call="web.ActionSidebar.Item">
                        <t t-set="sideItem" t-value="sideItemChild"/>
                        <t t-set="isChildList" t-value="true"></t>
                    </t>
                </t>
            </ul>
        </li>
    </t>

</templates>