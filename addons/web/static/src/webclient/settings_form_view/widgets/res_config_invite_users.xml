<?xml version="1.0" encoding="utf-8"?>
<templates>
    <div t-name='res_config_invite_users'>
        <div>
            <p class="o_form_label mb-0">Add New Team Members</p>
            <span class="text-muted smaller">
                Send an invitation to supervisors, field staff, or administrators to join your Inphms system.
            </span>
        </div>
        <div class="">
            <!-- <label style="margin-bottom: 0.3125rem;" class="o_form_label o_light_label o_form_label_readonly">
                <span>via e-mail</span>
            </label> -->
            <div class="d-flex input-group">
                <input t-model="state.emails" t-att-disabled="state.status != 'idle'" class="o_user_emails o_input form-control text-truncate" t-on-keydown="onKeydownUserEmails" type="text" placeholder="Type an email address..."/>
                <button t-att-disabled="state.status != 'idle'" class="btn btn-primary o_web_settings_invite flex-shrink-0" t-on-click="sendInvite"><strong><t t-esc="inviteButtonText"/></strong></button>
            </div>
            <t t-if="state.invite.pending_users.length">
                <p class="o_form_label pt-2 mb-0">Pending Invitations:</p>
                <span t-foreach="state.invite.pending_users" t-as="pending" t-key="pending[0]">
                    <a href="#" class="badge rounded-pill text-primary border border-primary o_web_settings_user" t-on-click.prevent="(ev) => this.onClickUser(ev, pending)"> <t t-esc="pending[1]"/> </a>
                </span>
                <t t-if="state.invite.pending_users.length &lt; state.invite.pending_count">
                    <br/>
                    <a href="#" class="o_web_settings_more" t-on-click.prevent="onClickMore"><t t-esc="state.invite.pending_count - state.invite.pending_users.length"/> more </a>
                </t>
            </t>
        </div>
    </div>

    <t t-name="res_config_invite_users_dialog">
        <Dialog size="'sm'" title.translate="Invite Users">
            <div>
                <p class="o_form_label mb-0">Add New Team Members</p>
                <span class="text-muted smaller">
                    Send an invitation to supervisors, field staff, or administrators to join your Inphms system.
                </span>
            </div>
            <div class="mt-3">
                <div class="d-flex input-group">
                    <input t-model="state.emails" t-att-disabled="state.status != 'idle'" class="o_user_emails o_input form-control text-truncate" t-on-keydown="onKeydownUserEmails" type="text" placeholder="Type an email address..."/>
                    <button t-att-disabled="state.status != 'idle'" class="btn btn-primary o_web_settings_invite flex-shrink-0" t-on-click="sendInvite"><strong><t t-esc="inviteButtonText"/></strong></button>
                </div>
            </div>
        </Dialog>
    </t>
</templates>
