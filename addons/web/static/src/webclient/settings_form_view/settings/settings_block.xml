<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web.SettingsBlock">
        <div t-ref="settingsContainerWrapper" class="bg-white shadow-sm border rounded overflow-hidden mx-3 mx-lg-4 my-3 my-lg-4">
            <h2 t-if="props.title" t-ref="settingsContainerTitle">
                <i t-if="props.icon" t-att-class="props.icon" class="me-2 text-muted fa"/>
                <HighlightText originalText="props.title"/>
            </h2>
            <h3 t-if="props.tip" class="o_setting_tip text-muted" t-ref="settingsContainerTip"><HighlightText originalText="props.tip"/></h3>
            <div class="row mt16 o_settings_container" t-att-class="props.class" t-ref="settingsContainer">
                <t t-slot="default"/>
            </div>
        </div>
    </t>
</templates>
