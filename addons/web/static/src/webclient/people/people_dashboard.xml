<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="web.PeopleDashboard">
        <Dashboard kpis="state.peopleKpis">
            <t t-set-slot="panelTitle">
                <h1 class="fw-bolder">People Overview</h1>
                <p class="text-muted mb-0" style="font-size:16px;">Understand who exists in your system and how they are connected.</p>
            </t>
            <t t-set-slot="panelActions">
                <button class="btn btn-primary" t-on-click.prevent="() => this.onAddPersonClick()">Add Person</button>
                <button class="btn btn-secondary" t-on-click.prevent="() => this.onInviteUserClick()">Invite User</button>
            </t>
            
        </Dashboard>
    </t>

</templates>