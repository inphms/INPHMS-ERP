<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.SystemInformation">
        <div class="lh-sm i_system_information p-3 d-flex flex-column gap-3">

            <t t-foreach="resolvedItems" t-as="item" t-key="item_index">
                <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start">
                    <span class="fw-semibold" t-esc="item.label"/>
                    <div class="d-flex align-items-center gap-2"
                         t-att-class="'text-' + (item.level || 'muted')">
                        <span class="text-end" t-esc="item.value"/>
                        <i class="fa fa-fw fa-circle"></i>
                    </div>
                </div>

                <t t-if="this.env.debug and item.actions">
                    <div class="list-group list-group-flush small">
                        <t t-foreach="item.actions" t-as="action" t-key="action_index">
                            <div class="list-group-item p-0">
                                <a href="#" t-on-click.prevent="action.callback" class="text-primary list-group-item list-group-item-action border-0 fw-semibold d-flex align-items-center justify-content-between">
                                    <div t-esc="action.label"></div>
                                    <div>→</div>
                                </a>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
            <t t-if="this.env.debug">
                <ul class="list-group">
                    <li class="list-group-item border-0 p-0">
                        <header class="fw-semibold pt-3 pb-2 border-top">Developer Tools</header>
                        <ul class="list-group d-block">
                            <li t-foreach="debugToolsActions" t-as="action" t-key="action_index" class="list-group-item border-0 p-0">
                                <header class="list-group-item py-lg-1 border-0 list-group-item-action cursor-pointer"
                                        t-on-click.prevent="action.callback">
                                    <a href="#" class="text-primary d-flex align-items-center justify-content-between">
                                        <div t-esc="action.label"/>
                                        <div>→</div>
                                    </a>
                                </header>
                            </li>
                        </ul>
                    </li>
                </ul>
            </t>

        </div>
    </t>

</templates>