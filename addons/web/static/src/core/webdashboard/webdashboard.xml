<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.WebDashboard">
        <div class="container-fluid py-4">
            <div class="dashboard-panel d-flex gap-3 justify-content-between align-items-start">
                <div>
                    <t t-slot="panelTitle"/>
                </div>
                <div t-if="props.slots and props.slots.panelActions" class="dashboard-panel-actions">
                    <t t-slot="panelActions"/>
                </div>
            </div>
            <div class="dashboard-kpis pt-4">
                <t t-foreach="kpiInsight" t-as="kpi" t-key="kpi.id">
                    <div class="kpi-card text-muted" t-att-data-tooltip="kpi.help">
                        <div class="fw-semibold h2" t-esc="kpi.value"></div>
                        <t t-esc="kpi.name"></t>
                    </div>
                </t>
            </div>
            <t t-slot="default"></t>
        </div>
    </t>

</templates>