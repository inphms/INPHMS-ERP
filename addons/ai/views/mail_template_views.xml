<?xml version="1.0"?>
<inphms>
    <record id="email_template_form" model="ir.ui.view">
        <field name="name">mail.template.view.form.inherit.ai</field>
        <field name="model">mail.template</field>
        <field name="inherit_id" ref="mail.email_template_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='content']//div[hasclass('text-muted')]" position="replace">
                <div invisible="not can_write" class="fst-italic text-muted">Tip: Write /field to insert values or /prompt to integrate AI-generated dynamic content!</div>
            </xpath>
        </field>
    </record>
</inphms>