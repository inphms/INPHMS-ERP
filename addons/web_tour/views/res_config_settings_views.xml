<?xml version="1.0" encoding="UTF-8"?>
<inphms>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.web.tour</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@name='user_interface_menu_items']/div" position="inside">
                    <div class="list-group-item">
                        <button name="%(web_tour.tour_action)d" string="Tours" icon="fa-hand-o-right" type="action" class="btn-link d-flex w-100 align-items-center justify-content-between"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</inphms>