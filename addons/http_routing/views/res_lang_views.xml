<?xml version="1.0"?>
<inphms>
    <record id="res_lang_form_inherit_model" model="ir.ui.view">
        <field name="name">res.lang.form.http_routing.inherit</field>
        <field name="model">res.lang</field>
        <field name="inherit_id" ref="base.res_lang_form"/>
        <field name="arch" type="xml">
            <!-- <field name="iso_code" position="after">
                <field name="url_code" required="0"/>
            </field> -->
            
            <xpath expr="//div[hasclass('smaller')]/field[@name='iso_code']" position="after">
                <label for="url_code"></label>
                <field name="url_code" readonly="1"/>
            </xpath>
            <xpath expr="//group/field[@name='iso_code']" position="after">
                <field name="url_code" required="0"/>
            </xpath>
        </field>
    </record>

    <record id="res_lang_tree_inherit_model" model="ir.ui.view">
        <field name="name">res.lang.list.model.inherit</field>
        <field name="model">res.lang</field>
        <field name="inherit_id" ref="base.res_lang_tree"/>
        <field name="arch" type="xml">
            <field name="iso_code" position="after">
                <field name="url_code" groups="base.group_no_one"/>
            </field>
        </field>
    </record>
</inphms>
