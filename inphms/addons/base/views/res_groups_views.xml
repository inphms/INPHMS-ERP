        <!-- Group's sections -->
        <record id="view_res_groups_privilege_list" model="ir.ui.view">
            <field name="name">res.groups.privilege.list</field>
            <field name="model">res.groups.privilege</field>
            <field name="arch" type="xml">
                <list default_group_by="category_id">
                    <field name="name"/>
                    <field name="group_ids" widget="many2many_tags" context="{'short_display_name': True}"/>
                </list>
            </field>
        </record>
        <record id="view_res_groups_privilege_form" model="ir.ui.view">
            <field name="name">res.groups.privilege.form</field>
            <field name="model">res.groups.privilege</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <group class="border rounded mb-4 i__group" string="Definition">
                                <field name="name" placeholder="Privilege Name"/>
                                <field name="sequence" groups="base.group_no_one"/>
                                <field name="category_id" invisible="'default_category_id' in context"/>
                                <field name="placeholder"/>
                            </group>
                            <group string="Groups" class="border rounded mb-4 i__group">
                                <field name="group_ids" widget="many2many" domain="[('privilege_id', '=', False)]" context="{'default_privilege_id': id}">
                                    <list string="Groups">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </group>
                        </div>
                        <sidepanel>
                            <group string="Status" class="border rounded mb-4 i__group">
                                <div class="alert alert-warning" role="alert" colspan="2">
                                    <strong>Warning! </strong>editing this, may result in unnecessary security and behaviour leaks,
                                    please really make sure you know what you're doing.
                                </div>
                                <field name="category_id" readonly="1"></field>
                                <field name="create_date" widget="date" options="{'show_time': false}" readonly="1" class="fw-bold"/>
                                <field name="write_date" readonly="1" class="fw-bold"/>
                            </group>
                            <group string="Notes" class="border rounded mb-4 i__group">
                                <field name="description" options="{'height': 100}" nolabel="1" colspan="2" placeholder="Internal Notes"/>
                            </group>
                        </sidepanel>
